<!--  This file is only used by Jetty -->
<Configure class="org.eclipse.jetty.webapp.WebAppContext">

  <Set name="contextPath">/orchestratoreRADAR</Set>
  
 
    <New id="jdbc/orchestratore" class="org.eclipse.jetty.plus.jndi.Resource">
        <Arg>jdbc/orchestratore</Arg>
        <Arg>
            <New class="org.apache.commons.dbcp.BasicDataSource">
                <Set name="driverClassName">org.apache.derby.jdbc.EmbeddedDriver</Set>
                <Set name="url">jdbc:derby:orchestratore.db;create=true</Set>
                <Set name="username"></Set>
                <Set name="password"></Set>
            </New>

        </Arg>
    </New>
 
</Configure>
